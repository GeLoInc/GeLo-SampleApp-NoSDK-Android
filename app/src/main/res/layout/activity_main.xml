<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.gelo.gelobeaconsampleapp.app.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="UUID"
        android:id="@+id/textView3"
        android:padding="10dp"
        android:textStyle="bold" />

   <TextView
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:singleLine="true"
       android:text="UUID Label"
       android:id="@+id/uuidLabel"
       android:padding="10dp"
       android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Major"
        android:id="@+id/textView"
        android:padding="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Major Label"
        android:id="@+id/majorLabel"
        android:layout_below="@+id/textView"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Minor"
        android:id="@+id/textView2"
        android:padding="10dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Minor Label"
        android:id="@+id/minorLabel"
        android:padding="10dp" />

</LinearLayout>
